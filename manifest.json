{
  "name": "Bluetooth Scanner",
  "description": "Simple scanner for bluetooth devices nearby.",
  "version": "0.3.1",
  "author": "Martin Albrecht",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "bluetooth": {
    "low_energy": true,
    "socket": true
  },
  "icons": {
    "16": "Bluetooth-Icon-16.png",
    "48": "Bluetooth-Icon-48.png",
    "128": "Bluetooth-Icon-128.png" }
}